{
    "extends": "../../tsconfig.base.json",

    "include": [ "src/**/*.ts", "src/**/*.tsx", "src/**/*.js" ],

    "compilerOptions": {
        "rootDir": "src",
        "outDir": "../../dist/ws-update-viewer",

        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "strict": true,
        "allowJs": true,
        "jsx": "react"
    }
}